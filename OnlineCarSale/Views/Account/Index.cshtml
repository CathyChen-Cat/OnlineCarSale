
@{
    ViewBag.Title = "Index";
}

@if (Session["Name"] != null)
{
    <h2 class="mt-3 mb-3"> Welcome @Session["Name"] </h2>
    <hr />

    <h3 class="mt-3 mb-3"> Your Details </h3>

    <table class="table-primary mb-3">
        <tbody>
            <tr>
                <th scope="row"> Name </th>
                <td>@Session["Name"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Address </th>
                <td>@Session["Address"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Phone </th>
                <td>@Session["Phone"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Email </th>
                <td>@Session["Email"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Username </th>
                <td>@Session["Username"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Your Id </th>
                <td>@Session["SId"].ToString()</td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Logout", "Logout", "Account", new { @class = "btn btn-primary" })
                </td>
            </tr>
        </tbody>
    </table>

    <hr />
    <h3 class="mt-3 mb-3"> Car Details </h3>

    <table class="table-primary mb-3">
        <tbody>
            <tr>
                <th scope="row"> Company </th>
                <td>@Session["Company"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Model </th>
                <td>@Session["Model"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Body Type </th>
                <td>@Session["BodyType"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Year </th>
                <td>@Session["Year"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Price </th>
                <td>@Session["Price"].ToString()</td>
            </tr>
            <tr>
                <th scope="row"> Location </th>
                <td>@Session["Location"].ToString()</td>
            </tr>
            <tr>
                <td>
                    <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Addcar", "Account")'">
                        <i class="bi bi-plus-circle"> Add New Car </i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
}






