@model OnlineCarSale.Models.Seller

@{
    ViewBag.Title = "Login";
}

<h3 class="row mt-3 mb-3"> Please Login </h3>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row mt-3 mb-3">
        @Html.LabelFor(s => s.Username, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(s => s.Username, new { @class = "form-control", @placehodler = "Username" })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mt-3 mb-3">
        @Html.LabelFor(s => s.Passowrd, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(s => s.Passowrd, new { @class = "form-control", @placehodler = "Password" })
            @Html.ValidationMessageFor(model => model.Passowrd, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mt-3 mb-3 me-3">
        @Html.HiddenFor(model => model.SId)
        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
        @Html.ActionLink("Register", "Register", "Account", new { @class = "btn btn-primary" })
    </div>
}

