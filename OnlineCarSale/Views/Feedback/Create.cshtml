@model OnlineCarSale.Models.Feedback

@{
    ViewBag.Title = "Feedback Details";
}

<div class="row mb-3 mt-3">
    <div class="col-12 mt-3">
        <p>Dear Customer,</p>
        <p>Thank you for using our online car sale website. We would like to know how we performed.</p>
    </div>
    <div class="col-12 mt-3">
        <h5>Please Fill In Feedback Form</h5>
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-12 mt-3">
            <label for="inputName" class="form-label">Name</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="col-12 mt-3">
            <label for="inputEmail4" class="form-label">Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-12 mt-3">
            <label>How easy is it to find information on the site?</label>
            @Html.ValidationMessageFor(model => model.InfoRadio, "", new { @class = "text-danger" })
        </div>
        <div class="col-12 mt-3">
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(model => model.InfoRadio, "Easy", new { @class = "form-check-input" })
                <label class="form-check-label" for="inlineRadio1">Easy</label>
            </div>
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(model => model.InfoRadio, "Average", new { @class = "form-check-input" })
                <label class="form-check-label" for="inlineRadio2">Average</label>
            </div>
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(model => model.InfoRadio, "Difficult", new { @class = "form-check-input" })
                <label class="form-check-label" for="inlineRadio3">Difficult</label>
            </div>
        </div>
        <div class="col-12 mt-3">
            <label>Were you able to find what you needed?</label>
            @Html.ValidationMessageFor(model => model.NeedRadio, "", new { @class = "text-danger" })
        </div>
        <div class="col-12 mt-3">
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(model => model.NeedRadio, "Yes", new { @class = "form-check-input" })
                <label class="form-check-label" for="inlineRadio1">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(model => model.NeedRadio, "No", new { @class = "form-check-input" })
                <label class="form-check-label" for="inlineRadio2">No</label>
            </div>
        </div>
        <div class="col-12 mt-3">
            <label for="inputComment" class="form-label">Comments</label>
            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
        </div>
        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">SUBMIT</button>
        </div>
    }
</div>


