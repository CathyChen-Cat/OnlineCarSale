
@{
    ViewBag.Title = "Index";
}

<form>
    <div class="row mb-3 mt-3">
        <div class="col-12 mt-3">
            <p>Dear Customer,</p>
            <p>Thank you for using our online car sale website. We would like to know how we performed.</p>
        </div>
        <div class="col-12 mt-3">
            <h5>Please Fill In Feedback Form</h5>
        </div>
        <div class="col-12 mt-3">
            <label for="inputName" class="form-label">Name</label>
            <input type="text" class="form-control" id="inputName">
        </div>
        <div class="col-12 mt-3">
            <label for="inputEmail4" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail4">
        </div>
        <div class="col-12 mt-3">
            <label>How easy is it to find information on the site?</label>
        </div>
        <div class="col-12 mt-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                <label class="form-check-label" for="inlineRadio1">Easy</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                <label class="form-check-label" for="inlineRadio2">Average</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                <label class="form-check-label" for="inlineRadio3">Difficult</label>
            </div>
        </div>
        <div class="col-12 mt-3">
            <label>Were you able to find what you needed?</label>
        </div>
        <div class="col-12 mt-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                <label class="form-check-label" for="inlineRadio1">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                <label class="form-check-label" for="inlineRadio2">No</label>
            </div>
        </div>
        <div class="col-12 mt-3">
            <label for="inputComment" class="form-label">Comments</label>
            <textarea class="form-control" placeholder="Leave a comment here" id="inputComment"></textarea>
        </div>
        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">SUBMIT</button>
        </div>
    </div>
</form>

